{
  "name": "rscript-extension",
  "displayName": "RScript",
  "description": "Run C# scripts inside Autodesk Revit directly from VS Code.",
  "version": "0.0.1",
  "publisher": "seyoum-hagos",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sey56/RScripting"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages",
    "Debugging"
  ],
  "activationEvents": [
    "onCommand:rscript.initializeWorkspace",
    "onCommand:rscript.runScript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rscript.initializeWorkspace",
        "title": "RScript: Initialize Workspace"
      },
      {
        "command": "rscript.runScript",
        "title": "RScript: Run Script"
      }
    ],
    "keybindings": [
      {
        "command": "rscript.runScript",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "RScript",
      "properties": {
        "rscript.revitInstallPath": {
          "type": "string",
          "default": "C:\\Program Files\\Autodesk\\Revit 2025",
          "description": "The path to Revit 2025, used to resolve RevitAPI.dll and RevitAPIUI.dll for IntelliSense."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "tmp": "^0.2.3"
  }
}
